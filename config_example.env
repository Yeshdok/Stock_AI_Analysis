# A股量化分析系统环境配置示例
# 复制此文件为 .env 并修改相应配置

# 应用环境
FLASK_ENV=development
FLASK_DEBUG=true

# 服务端口配置
API_PORT=5001
FRONTEND_PORT=3000

# TuShare Pro配置 (必需)
# 注册地址: https://tushare.pro
TUSHARE_TOKEN=your_tushare_token_here

# 数据源配置
PRIMARY_DATA_SOURCE=tushare
BACKUP_DATA_SOURCE=akshare

# API请求配置
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RATE_LIMIT=200

# 缓存配置 (可选)
ENABLE_CACHE=true
CACHE_TTL=300

# Redis配置 (可选，启用缓存时需要)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 数据库配置 (可选)
DATABASE_URL=sqlite:///stock_analysis.db

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 安全配置
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=http://localhost:3000

# 功能开关
ENABLE_REAL_TIME_DATA=true
ENABLE_BACKTESTING=true
ENABLE_STRATEGY_OPTIMIZATION=true

# 性能配置
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000